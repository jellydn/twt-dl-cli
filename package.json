{
  "name": "twt-dl-cli",
  "version": "0.2.0",
  "description": "The easiest way to download any Twitter video from CLI",
  "keywords": [
    "twt-dl-cli",
    "video",
    "twitter",
    "download"
  ],
  "repository": "https://github.com/jellydn/twt-dl-cli",
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll --env.NODE_ENV=production --minify",
    "cli": "npx tsx ./src/cli.ts",
    "example": "npx tsx ./example/index.ts",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "lint": "eslint --fix",
    "prepack": "clean-pkg-json",
    "prepare": "husky install",
    "test": "vitest --run",
    "test:tsd": "tsd",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "pkgroll --watch"
  },
  "dependencies": {
    "@types/download": "8.0.5",
    "cheerio": "1.0.0-rc.12",
    "cleye": "1.3.2",
    "cross-fetch": "4.0.0",
    "download": "8.0.0",
    "ora": "8.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.2",
    "@skypack/package-check": "0.2.2",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "clean-pkg-json": "1.2.0",
    "consola": "3.2.3",
    "eslint": "8.56.0",
    "eslint-config-productsway": "1.3.1",
    "husky": "8.0.3",
    "nano-staged": "0.8.0",
    "pkgroll": "2.0.1",
    "prettier": "3.2.5",
    "sort-package-json": "2.8.0",
    "tsd": "0.30.5",
    "tsx": "4.7.1",
    "typescript": "5.3.3",
    "vite": "5.1.4",
    "vitest": "1.3.1"
  },
  "nano-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,css,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "tsd": {
    "directory": "tests"
  }
}
